<%- include('parts/html-head') %>
<%- include('parts/navbar') %>

<div class="container">
    <div class="row mt-3">
        <div class="col">
            <form>
                <div class="mb-3">
                    <label for="orderByCol" class="form-label">欄位：</label>
                    <select class="form-select form-select-lg mb-3" id="orderByCol" name="orderByCol">
                        <option value="name">名字</option>
                        <option value="age">年齡</option>
                        <option value="id">ID</option>
                      </select>
                  </div>
                  <div class="mb-3">
                    <label for="orderByRule" class="form-label">規則：</label>
                    <select class="form-select form-select-lg mb-3" id="orderByRule" name="orderByRule">
                        <option value="asc">由小到大</option>
                        <option value="desc">由大到小</option>
                      </select>
                  </div>
                  <button type="submit" class="btn btn-primary">送出</button>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover mt-3">
        <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">名字</th>
        <th scope="col">年齡</th>
      </tr>
    </thead>
    <tbody>        
        <% for(let i of sales){ %>
            <tr>
                <td><%= i.id %></td>
                <td><%= i.name %></td>
                <td><%= i.age %></td>
            </tr>
        <% } %>
    </tbody>
    </table>
</div>

<!-- views資料夾名稱為固定，是ejs讀取固定使用 -->
<%- include('parts/scripts') %>
<%- include('parts/html-foot') %>